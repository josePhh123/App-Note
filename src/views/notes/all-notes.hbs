<div class="row">
    {{#each notes}}
    <div class="col-md-3 m-1">
        <div class="card m-1">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ title }} 
                    <a href="/notes/edit/{{_id}}" class="btn btn-sm btn-info">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </h4>
                <p class="card-text">{{ description }}</p>
                <div class="text-center"> <!-- Agregué la clase text-center aquí -->
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-body text-center">
                <h1>Hola {{user.name}}</h1>
                <p class="lead">Aun no tienes Apunte</p>
                <a href="/notes/add" class="btn btn-success btn-block">Crear nota</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>